{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ã‰crire un commentaire</h1>

    {{ form_start(form, {'attr': {'class' : 'col-lg-8 col-lg-offset-2'}} ) }}
    {{ form_errors(form) }}
    	<div class="form-group">
    		{{ form_label(form.repository) }}
    		{{ form_widget(form.repository, {'attr': {'class' : 'form-control'}} ) }}
    	</div>
    	
    	<div class="form-group">
    		{{ form_label(form.comment) }}
    		{{ form_widget(form.comment, {'attr': {'class' : 'form-control', 'rows' : 15}} ) }}
    	</div>
    	
    	<a href="{{ path('git_index') }}" class="btn btn-primary pull-right">Retour</a>
    	
    	{{ form_widget(form.submit, {'attr': {'class' : 'btn btn-success pull-right', 'value' : 'Envoyer'}} ) }}
    {{ form_end(form) }}
    
    <div id="show" class="col-lg-12"></div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		var path = "{{ path('git_show', { 'gitUser' : 'flag' }) }}";
		var flag = path.replace('flag', '{{ entity.repositoryOwner }}');
		console.log(flag);
		$('#show').load(flag);
	</script>
{% endblock %}